<core:UserControlViewBase x:Class="Demo.Admin.Client.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.Admin.Client.Views"
             xmlns:core="http://www.demo.com/core"
             xmlns:conv="clr-namespace:Demo.Admin.Client.Support"
             xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        
        <TabControl Grid.Row="0">
            <TabItem Header="{Binding MaintainProductsViewModel.ViewTitle}"
                     Content="{Binding MaintainProductsViewModel}" />
            <TabItem Header="{Binding MaintainOrdersViewModel.ViewTitle}"
                     Content="{Binding MaintainOrdersViewModel}" />
        </TabControl>

    </Grid>
</core:UserControlViewBase>
